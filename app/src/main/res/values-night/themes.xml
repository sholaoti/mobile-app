<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ETNAWallet" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_primaryColor900</item>
        <item name="colorPrimaryVariant">@color/c_primaryColor900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorPrimaryDark">@color/c_primaryColor900</item>
        <item name="android:windowBackground">@color/c_primaryColor900</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Etna.HeadlineLarge</item>
    </style>
</resources>