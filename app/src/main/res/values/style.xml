    <style name="TextAppearance.Etna.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Etna.ChartCaps" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">8sp</item>
