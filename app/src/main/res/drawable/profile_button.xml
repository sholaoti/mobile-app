<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1dp"
                android:color="#171720"/>
            <corners
                android:radius="16dp" />

            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>

            <solid android:color="#171720"/>

        </shape>

    </item>

    <item
        android:drawable="@drawable/chevron_right"
        android:gravity="end|center_vertical"
        android:right="12dp"
        />
</layer-list>